<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".mainFragment">

    <!-- TODO: Update blank fragment layout -->


    <Button
        android:id="@+id/btn_baothuc"
        android:layout_width="205dp"
        android:layout_height="70dp"
        android:backgroundTint="@android:color/white"
        android:fontFamily="sans-serif-condensed-light"
        android:text="@string/baothuc"
        android:textAllCaps="false"
        android:textColor="#675C5C"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/btn_demnguoc"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_demnguoc"
        android:layout_width="205dp"
        android:layout_height="70dp"
        android:backgroundTint="#675C5C"
        android:fontFamily="sans-serif-condensed-light"
        android:text="@string/demnguoc"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_baothuc"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:foregroundGravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_baothuc"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#FFFFFF"
        android:contentDescription="TODO"
        android:src="@drawable/add"
        app:layout_constraintBottom_toBottomOf="@+id/list_baothuc"
        app:layout_constraintEnd_toEndOf="@+id/list_baothuc"
        app:layout_constraintStart_toStartOf="@+id/list_baothuc"
        tools:ignore="SpeakableTextPresentCheck" />

</android.support.constraint.ConstraintLayout>